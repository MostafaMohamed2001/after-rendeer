<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
  <head>
    <script src="../../js/color-modes.js"></script>
    <link
      rel="stylesheet"
      href="../../bootstrap-icons-1.10.5/font/bootstrap-icons.min.css"
    />
    <link rel="shortcut icon" href="../../images/logo.jpg" type="image/x-icon">

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta
      name="author"
      content="Mark Otto, Jacob Thornton, and Bootstrap contributors"
    />
    <meta name="generator" content="Hugo 0.112.5" />
    <title>Slide Component</title>

    <link href="../../css/bootstrap.min.css" rel="stylesheet" />

    <link href="../../css/dark-light.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="../../css/sidebars.css" rel="stylesheet" />
    <link rel="stylesheet" href="../../css/myStyle.css" />
  </head>
  <body>
    <%- include('./../Components/dark-light.ejs') %>
    <main class="d-flex flex-nowrap">
 <%- include('./../Components/sidebar.ejs',{currentPage:"changeSlide"}) %>
 
      <section class="w-100">
        <%- include('./../Components/navbar'); %>

        <form  action="/dashboard/updateSlide/<%= slide._id %>?_method=PUT" method="post"  class="mx-0 row gx-3 gy-4 mt-2">
          <div class="col-md-6">
            <label for="Tilte" class="form-label">Title Here:</label>
            <input
              value="<%= slide.title %>"
              type="text"
              class="form-control"
              id="Tilte"
              name="title"
            />
          </div>
          <div class="col-md-6">
            <label for="description" class="form-label" >Description</label>
            <textarea name="description" id="description" cols="30" rows="10" class="form-control"  ><%= slide.description %></textarea>
          </div>

          
          <div class="col-md-6">
            <label for="Silde" class="form-label" 
            >Image Slide:</label>
            <input
              type="text"
              placeholder="Upload Image file"
              class="form-control"
              id="Silde"
              name="img"
             
            />
          </div>
          <div class="img-box">
            <img src="<%= slide.img %>" alt="" height="200px" width="400px">
          </div>
          
      

          <div class="col-12">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>

    </main>
    <script src="../../js/bootstrap.bundle.min.js"></script>

    <script src="../../js/sidebars.js"></script>
    <script src="../../js/main.js"></script>
  </body>
</html>
