<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
  <head>
    <script src="../js/color-modes.js"></script>
    <link
      rel="stylesheet"
      href="../bootstrap-icons-1.10.5/font/bootstrap-icons.min.css"
    />
 
    <link rel="shortcut icon" href="../images/logo.jpg" type="image/x-icon">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta
      name="author"
      content="Mark Otto, Jacob Thornton, and Bootstrap contributors"
    />
    <meta name="generator" content="Hugo 0.112.5" />
    <title>Home page</title>

    <link href="../css/bootstrap.min.css" rel="stylesheet" />

  <!--Dark - Light  CSS-->
  <link href="../css/dark-light.css" rel="stylesheet" />


    <!-- Custom styles for this template -->
    <link href="./../css/sidebars.css" rel="stylesheet" />
    <link rel="stylesheet" href="../css/myStyle.css" />
  </head>
  <body>
 
    <%- include('./../Components/dark-light.ejs') %>
    <main class="d-flex flex-nowrap">
      <!--Side baaaaar-->
      <%- include('./../Components/sidebar.ejs',{currentPage:"viewProduct"}) %>

      <section class="w-100">
        <!-- Content Nav Bar here -->
        <%- include('./../Components/navbar'); %>
        <% if (product.length > 0) {%>
        <table
          style="width: 99%"
          class="text-center mx-auto table mt-5 table-striped table-bordered"
        >
          <thead>

            <tr>
              <th scope="col">#</th>
              <th scope="col">Product</th>
              <th scope="col">Price</th>
              <th scope="col">Disccount</th>
              <th scope="col">Category</th>
              <th scope="col">Image</th>
          
                <th scope="col">Stock</th>
              <th scope="col">Last updated</th>
          
            </tr>

          </thead>
          <tbody>
  
              
            
            <% product.forEach(function(product,index){ %>

          
            <tr>
              <th scope="row"><%= index + 1 %></th>
              <td><%= product.Name %></td>
              <td><%= product.price %></td>
              <td><%= product.priceDisscount %></td>
              <td><%= product.category %></td>
              
              <td><img src="<%= product.img %>"  height="100px" width="100px" ></td>
              <% if ( product.stock  === false) { %>
                <td style="color: red; font-weight: bold;"> مش موجود</td>
              <% } else { %>
                <td></td>
                <% } %>
             
              
              <td>
              
                <a
                  data-bs-toggle="tooltip"
                  data-bs-title="View details"
                  data-bs-placement="top"
                  class="btn btn-primary btn-sm"
                  href="view-product-details/<%= product._id%>"
                  ><i class="bi bi-eye"></i
                ></a>

                <a
                  data-bs-toggle="tooltip"
                  data-bs-title="Edit user"
                  data-bs-placement="top"
                  class="btn btn-primary btn-sm"
                  href="edit-product/<%= product._id %>"
                >
                  <i class="bi bi-pencil"></i>
                </a>
                <form 
                style="display: inline;"
                action="/dashboard/deleteProduct/<%= product._id %>?_method=DELETE" method="post">
                <button
                  data-bs-toggle="tooltip"
                  data-bs-title="Delete user"
                  data-bs-placement="top"
                  class="btn btn-danger btn-sm"
                >
                  <i class="bi bi-trash"></i>
                </button>
              </form>
              </td>
            </tr>
         <% }) %>

      
      
          </tbody>
        </table>
        <%  } else { %>
          <h2 style="text-align: center; margin-top: 4rem;">NO Data In DB </h2>
      <% } %>
      </section>
    </main>
    
    <%- include('./../Components/jsCode.ejs') %>
   
  </body>
</html>
